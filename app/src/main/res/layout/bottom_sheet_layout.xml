<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/bottomsheet_back"
    android:backgroundTint="@color/bgcolor"
        android:id="@+id/cardBalance">

        <View
            android:layout_width="80dp"
            android:id="@+id/view"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"

            android:padding="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="textStart"
                android:padding="3dp"



                android:text="Make sure add real balance else your deposit\n balance is not verified"
                android:textColor="@color/black"
                android:textSize="13sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/back_edit"
                  >
                    <EditText
                        android:id="@+id/etBalanceDeposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:inputType="number"

                        android:hint="Enter balance to deposit"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNextBalance"
                android:layout_width="wrap_content"

                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_height="45dp"
android:paddingStart="18dp"
                android:drawablePadding="6dp"

                android:background="@drawable/backda"
                android:paddingEnd="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Next"
                android:drawableRight="@drawable/baseline_arrow_forward_24"

                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
               />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
