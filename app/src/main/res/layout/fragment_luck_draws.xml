<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bottomsheet_back"
    tools:context=".fragments.LuckDrawsFragment">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 day lucky draw"

android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/baseline_arrow_forward_24"

        android:background="@drawable/back_sq"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7 day lucky draw"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/baseline_arrow_forward_24"

        android:background="@drawable/back_sq"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15 day lucky draw"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/baseline_arrow_forward_24"

        android:background="@drawable/back_sq"
        />

</LinearLayout>