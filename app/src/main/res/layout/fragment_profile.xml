<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">
    <!-- profile_fragment.xml -->
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ssd"

            />

        <!-- User Name -->
        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <!-- User Level -->
        <TextView
            android:id="@+id/textViewUserLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Level"
            android:textSize="16sp"
            android:layout_below="@id/textViewUserName"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

        <!-- Admin Status -->
        <TextView
            android:id="@+id/textViewAdminStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="16sp"
            android:layout_below="@id/textViewUserLevel"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

        <!-- Chat Button -->
        <Button
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_below="@id/textViewAdminStatus"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_below="@id/btnChat"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>


</FrameLayout>